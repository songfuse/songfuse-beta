# SongFuse Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Environment
NODE_ENV=development

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_KEY_PROD=your_production_openai_api_key_here

# OpenAI Assistant IDs
OPENAI_ASSISTANT_ID=your_assistant_id_here
OPENAI_ASSISTANT_ID_DB=your_db_assistant_id_here

# Spotify Configuration
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:5000/api/auth/callback

# Spotify Service Account Tokens
SPOTIFY_SERVICE_ACCESS_TOKEN=your_service_access_token_here
SPOTIFY_SERVICE_REFRESH_TOKEN=your_service_refresh_token_here

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Auth0 Configuration (Optional)
AUTH0_SECRET=your_auth0_secret_here
AUTH0_BASE_URL=http://localhost:5000
AUTH0_ISSUER_BASE_URL=https://your_domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id_here
AUTH0_CLIENT_SECRET=your_auth0_client_secret_here
